<odoo>
    <template id="portal_my_employees_template" name="My Employees">
       <t t-call="website.layout">
        <div class="container mt16">
            <h3>Employees List</h3>

            <!-- Employee Table -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Employee Name</th>
                        <th>Manager</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="employees" t-as="emp">
                        <tr>
                            <td><t t-esc="emp.name"/></td>
                            <td>
                                <t t-if="emp.parent_id">
                                    <t t-esc="emp.parent_id.name"/>
                                </t>
                                <t t-else="">No Manager</t>
                            </td>
                        </tr>
                    </t>
                </tbody>
            </table>

            <!-- Create New Employee Form -->
            <h4>Create New Employee</h4>
            <form t-att-action="'/create_employee'" method="post">
                <div class="form-group">
                    <label for="emp_name">Employee Name:</label>
                    <input type="text" class="form-control" name="name" id="emp_name" required="True"/>
                </div>
                <div class="form-group">
                    <label for="manager_id">Manager:</label>
                    <select class="form-control" name="manager_id" id="manager_id">
                        <option value="">-- Select Manager --</option>
                        <t t-foreach="employees" t-as="emp">
                            <option t-att-value="emp.id" t-esc="emp.name"/>
                        </t>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt8">Create Employee</button>
            </form>
        </div>
    </t>
    </template>
</odoo>
