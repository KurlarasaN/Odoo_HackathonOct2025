<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="approval_rule_list_view" model="ir.ui.view">
		<field name="name">approval.rules</field>
		<field name="model">approval.rules</field>
		<field name="arch" type="xml">
            <list>
                <field name="name"/>
				<field name="user_id" required="1"/>
            </list>



		</field>
	</record>

	<!-- Travel Meal Policy Form view -->
	<record id="approval_rule_form_view" model="ir.ui.view">
		<field name="name">approval.rules</field>
		<field name="model">approval.rules</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="name" />
						</group>
						<!--<group>
							<field name="vehicle" />
						</group>-->
					</group>
					<notebook>
						<page name="approver_ids" string="Approver">
							<field name="approver_ids">
								<list editable="bottom" >
									<field name="user_id" />

									<field name="is_approver" />
								</list>
							</field>
						</page>
                    </notebook>
                </sheet>

        </form>
		</field>
	</record>

	<!--  -->
	<record id="action_approval_rules" model="ir.actions.act_window">
		<field name="name">Employee Type</field>
		<field name="res_model">approval.rules</field>
		<field name="view_mode">list,form</field>
	</record>

	<!-- approval rules menu -->
	<menuitem id="menu_approval_menu" name="Approval Rules"
		action="action_approval_rules" parent="hr_expense.menu_hr_expense_configuration" sequence="3"
	/>

</odoo>